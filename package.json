{
  "name": "nade-desktop",
  "version": "1.0.0",
  "description": "NADE Desktop Application - Professional Audio Encryption Bridge System",
  "main": "src/main/index.js",
  "author": "NADE Team",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:native": "node-gyp rebuild",
    "dist": "electron-builder --publish=never",
    "postinstall": "electron-builder install-app-deps",
    "lint": "eslint src/",
    "test": "jest"
  },
  "build": {
    "appId": "com.nade.desktop",
    "productName": "NADE Desktop",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    }
  },
  "dependencies": {
    "serialport": "^10.5.0"
  },
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4",
    "node-gyp": "^10.0.0",
    "@electron/rebuild": "^3.3.0",
    "eslint": "^8.50.0",
    "jest": "^29.7.0"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}